@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cover Type List</h2>
        </div>
         <div class="col-6 text-end"  >
             <a asp-contoller="CoverType"  asp-action="Create" type="button" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
             </a>

        </div>
    </div>
    <br /><br />





<table class="table-bordered table-striped " style="width:100%">
    <thead >
        <tr>
            <th  >
                Cover Type Name 
            </th >
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model )
        {
            <tr >
                <td width="50%">
                    @obj.Name
                </td>
               
                <td>
                    <div class="w-75   btn-group text-center" role="group">
                        <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary m-2" ><i class="bi bi-pen"></i>Edit</a>
                    
                        

                        <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-danger ps-2 m-2" ><i class="bi bi-eraser"></i>Delete</a>

                   
                    </div>
                 
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
